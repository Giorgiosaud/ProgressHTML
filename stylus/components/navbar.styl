.navbar-topContacts
	background rgba(0, 0, 0, 0.6)
	margin 0
	a
		color #FFF
	.nav
		line-height:auto;
.navbar-progress
	background rgba(255,255,255,0.65)
	border-radius: 0;
	a
		color #000
span.icon-bar
	background $azulProgress
.nav-progress
	display flex
	height: 40px
	list-style: none
	align-items: center
	justify-content: center
	margin 0
	flex-direction column
	li
		margin-left 1em
.nav-mainProgress
	height auto
.navbar-header-progress
	line-height 60px
.nav-progress-top
	flex-direction: row;
	align-items: center;
	justify-content: flex-end;
@media(min-width:768px)
	.nav-progress
		flex-direction row
	.nav-mainProgress
		height 60px

